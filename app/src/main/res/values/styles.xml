<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="MainMenuButtonStyle" parent="TextAppearance.AppCompat">
        <item name="android:textColor">@color/menu_button_text</item>
        <item name="android:textSize">25sp</item>
        <item name="android:fontFamily">@font/kanit_regular</item>
        <item name="android:backgroundTint">@color/menu_button_bg</item>
        <item name="android:letterSpacing">.05</item>
        <item name="android:layout_width">260dp</item>
        <item name="android:layout_height">59dp</item>
    </style>
    
    <style name="InGameBar" parent="TextAppearance.AppCompat">
        <item name="android:textColor">@color/inGameBar</item>
        <item name="android:textSize">25sp</item>
        <item name="android:fontFamily">@font/kanit_regular</item>
    </style>

    <style name="InGameShapesToChoose" parent="TextAppearance.AppCompat">
        <item name="android:layout_width">120dp</item>
        <item name="android:layout_height">120dp</item>
        <item name="android:background">@drawable/shape_menu_button</item>
        <item name="android:backgroundTint">#05FFFFFF</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:layout_margin">3dp</item>
    </style>
</resources>